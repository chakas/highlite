{
  "manifest_version": 2,
  "name": "highlite",
  "description": "This extension will highlite :)",
  "version": "1.0",
  "content_scripts":[
    {
      "matches" : ["<all_urls>"],
      "js":["bg.js"],
      "run_at" : "document_idle",
      "all_frames":false
    }
   ],
  "browser_action" : {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs"
  ]
}
